    <link type="text/rcss" href="../../rcss/base.rcss"/>
    <link type="text/rcss" href="../../rcss/main_menu.rcss"/>
</head>
<body id="main-menu">

    <div id="center-wrapper">
        <div id="menu-content">
            <h1 id="game-title">PAUSED</h1>

            <div id="menu-buttons">
                <button class="btn-primary" onclick="close_all()">RESUME</button>
                <button class="btn" onclick="navigate('save_game')">SAVE GAME</button>
