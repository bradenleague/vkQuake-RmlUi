                <button class="btn" onclick="navigate('options')">OPTIONS</button>
                <button class="btn" onclick="main_menu()">MAIN MENU</button>
                <button class="btn-quit" onclick="navigate('quit')">QUIT</button>
            </div>
        </div>
    </div>

</body>
</rml>
