/* Spacing - Padding */
.p-0 { padding: 0; }
.p-1 { padding: 4dp; }
.p-2 { padding: 8dp; }
.p-3 { padding: 12dp; }
.p-4 { padding: 16dp; }
.p-5 { padding: 24dp; }

.pt-0 { padding-top: 0; }
.pt-1 { padding-top: 4dp; }
.pt-2 { padding-top: 8dp; }
.pt-3 { padding-top: 12dp; }
.pt-4 { padding-top: 16dp; }
.pt-5 { padding-top: 24dp; }

.pb-0 { padding-bottom: 0; }
.pb-1 { padding-bottom: 4dp; }
.pb-2 { padding-bottom: 8dp; }
.pb-3 { padding-bottom: 12dp; }
.pb-4 { padding-bottom: 16dp; }
.pb-5 { padding-bottom: 24dp; }

/* Sizing */
.w-full { width: 100%; }
.h-full { height: 100%; }
.w-auto { width: auto; }
.h-auto { height: auto; }

/* Display */
.hidden { display: none; }
.visible { display: block; }

/* ============================================
   Color Utilities
   ============================================ */

.text-primary { color: #ffffff; }
.text-secondary { color: #666666; }
.text-accent { color: #8b0000; }
.text-muted { color: #666666; }
.text-success { color: #33ff66; }
.text-warning { color: #8b0000; }
.text-danger { color: #ff3333; }
.text-white { color: #ffffff; }

/* HUD colors â€” unchanged */
.text-health { color: #ff5050; }
.text-armor { color: #60a0ff; }
.text-ammo { color: #ffcc30; }

/* ============================================
   Background Utilities
   ============================================ */

.bg-transparent { background-color: transparent; }
.bg-dark { background-color: #000000; }
.bg-darker { background-color: #000000; }
.bg-surface { background-color: #111111; }
.bg-overlay { background-color: rgba(0, 0, 0, 0.7); }

/* ============================================
   Border Utilities
   ============================================ */

.border { border: 1dp #333333; }
.border-0 { border-width: 0; }
.border-accent { border: 1dp #8b0000; }

/* ============================================
   Animations
   ============================================ */

@keyframes fade-in {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

@keyframes fade-out {
    from {
        opacity: 1;
    }
    to {
        opacity: 0;
    }
}

@keyframes pulse {
    0% {
        transform: scale(1);
    }
    50% {
        transform: scale(1.05);
    }
    100% {
        transform: scale(1);
    }
}

@keyframes blink {
    0%, 100% {
        opacity: 1;
    }
    50% {
        opacity: 0;
    }
}

@keyframes slide-up-fade {
    from {
        opacity: 0;
        transform: translateY(12dp);
    }
    to {
        opacity: 1;
        transform: translateY(0dp);
    }
}

/* Animation classes */
.animate-fade-in {
    animation: fade-in 0.3s ease-out;
}

.animate-pulse {
    animation: pulse 2s ease-in-out infinite;
}

.animate-blink {
    animation: blink 1s step-start infinite;
}
