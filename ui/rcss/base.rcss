.m-1 { margin: 4dp; }
.m-2 { margin: 8dp; }
.m-3 { margin: 12dp; }
.m-4 { margin: 16dp; }
.m-5 { margin: 24dp; }

.mt-0 { margin-top: 0; }
.mt-1 { margin-top: 4dp; }
.mt-2 { margin-top: 8dp; }
.mt-3 { margin-top: 12dp; }
.mt-4 { margin-top: 16dp; }
.mt-5 { margin-top: 24dp; }

.mb-0 { margin-bottom: 0; }
.mb-1 { margin-bottom: 4dp; }
.mb-2 { margin-bottom: 8dp; }
.mb-3 { margin-bottom: 12dp; }
.mb-4 { margin-bottom: 16dp; }
.mb-5 { margin-bottom: 24dp; }

.ml-0 { margin-left: 0; }
.ml-1 { margin-left: 4dp; }
.ml-2 { margin-left: 8dp; }
.ml-3 { margin-left: 12dp; }
.ml-4 { margin-left: 16dp; }
.ml-5 { margin-left: 24dp; }

.mr-0 { margin-right: 0; }
.mr-1 { margin-right: 4dp; }
.mr-2 { margin-right: 8dp; }
.mr-3 { margin-right: 12dp; }
.mr-4 { margin-right: 16dp; }
